@model List<Category>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        @Html.HiddenFor(x => item.Id)
        <tr>
            <td>@item.CategoryName</td>
            <td><a asp-action="Create" asp-controller="Category" class="btn btn-success">Add</a></td>
            <td><a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-success">Edit</a></td>
            <td><a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-success">Delete</a></td>
        </tr>
    }
</table>
