@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "GetAll";
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Category Name</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        @Html.HiddenFor(x => item.Id)
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Price</td> 
            <td>@item.CategoryName</td>
            <td><a asp-action="Create" asp-controller="Product" class="btn btn-success">Add</a></td>
            <td><a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-success">Edit</a></td>
            <td><a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-success">Delete</a></td>
        </tr>
    }
</table> 

